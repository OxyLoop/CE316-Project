{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src",
    "src/types/electron-api.d.ts"
  ]
}
